* {
    background-color: #00000000;
    text-color: #f1d389;
    font: "FontAwesome 30";
}

#window {
  children: [ horibox ];
  padding: 300 0 0 300;
  width: 100%;
  height: 100%;
  background-color: #0c051f99;
}

#horibox {
  children: [ listview ];
}

#listview {
  layout: horizontal;
  spacing: 40px;
  lines: 5;
}

#element {
  padding: 24px 24px 16px -54px;
  background-color: #0c051f00;
  border-radius: 8;
}

#element.selected {
  background-color: #DE652E;
  text-color: #0c051f;
}
