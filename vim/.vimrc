set nocompatible

syntax on
set number relativenumber
set linebreak	
set showbreak=+++ 	
set textwidth=100	
set showmatch	
set visualbell	
set mouse=a
 
set hlsearch	
set smartcase	
set ignorecase	
set incsearch	
 
set autoindent	
set expandtab	
set shiftwidth=4	
set smartindent	
set smarttab	
set softtabstop=4	
 
set ruler	
 
set undolevels=1000	
set backspace=indent,eol,start	
